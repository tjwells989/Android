<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tomwells.contactsapp.MoreInfo"
    android:background="@drawable/profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:textSize="20dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_alignEnd="@+id/home"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:textSize="20dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_toStartOf="@+id/edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editemail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignTop="@+id/editmobilenum"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editfirstname"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editlastname"
        android:layout_below="@+id/editfirstname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editemail"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editmobilenum"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:inputType="phone|textPhonetic"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        android:layout_toEndOf="@+id/textView"
        android:height="100dp"
        android:layout_alignParentTop="true"
        android:width="100dp"
        android:background="#00ffffff"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginLeft="-65dp"
        android:layout_marginRight="-20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:layout_alignParentStart="true"
        android:width="125dp"
        android:layout_marginLeft="-5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-13dp"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_alignTop="@+id/delete"
        android:layout_toEndOf="@+id/delete"
        android:layout_marginLeft="20dp"
        android:width="125dp"
        android:layout_marginBottom="-15dp"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:layout_alignTop="@+id/save"
        android:layout_toEndOf="@+id/save"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-15dp"
        android:width="70dp"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call"
        android:layout_above="@+id/delete"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:width="100dp"
        android:height="80dp"
        android:background="#00ffffff" />

</RelativeLayout>
