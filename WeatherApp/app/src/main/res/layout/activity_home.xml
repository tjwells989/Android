<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/weather_main_back"
    tools:context=".Home"
    android:focusable="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Forcast"
        android:id="@+id/weather"
        android:layout_marginBottom="44dp"
        android:textColor="#afffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/temp"
        android:layout_alignEnd="@+id/temp"
        android:background="#cb4d4d4d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stormcast"
        android:id="@+id/temp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#abffffff"
        android:paddingTop="15dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_above="@+id/weather"
        android:layout_marginBottom="120dp"
        android:layout_alignEnd="@+id/weather"
        android:layout_alignStart="@+id/weather"
        android:textColor="#9effffff"
        android:gravity="center|center_vertical|center_horizontal"
        android:background="#30ffffff"
        android:inputType="textCapSentences"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your location"
        android:id="@+id/textView2"
        android:textColor="#93ffffff"
        android:textSize="20dp"
        android:layout_above="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

</RelativeLayout>
